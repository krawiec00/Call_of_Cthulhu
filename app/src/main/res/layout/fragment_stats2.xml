<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/parentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Punkty klasy"
            android:id="@+id/klasa"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zainteresowanie"
            android:id="@+id/zainteresowanie"/>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Tutaj zostaną dynamicznie dodane pola TextView i EditText -->
        </LinearLayout>

        <!-- Tutaj możesz umieścić inne elementy interfejsu użytkownika -->

    </LinearLayout>

</ScrollView>
