<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:layout_marginVertical="8dp"
    android:background="@color/cthulhu_DarkGreen">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/baseline_add_photo_alternate_24"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"
        android:id="@+id/mini_image"
        android:contentDescription="photo of character"
        android:layout_alignParentEnd="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toStartOf="@id/mini_image"
        android:layout_marginEnd="8dp">

        <TextView
            android:id="@+id/card_imie_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Imie"
            android:textSize="20sp"
            android:layout_marginVertical="4dp"
            android:textColor="@color/white"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/card_nazwisko_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Nazwisko"
            android:textSize="20sp"
            android:layout_marginVertical="4dp"
            android:maxLines="1"
            android:ellipsize="end"/>

    </LinearLayout>

</RelativeLayout>
