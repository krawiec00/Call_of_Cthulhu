<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:layout_marginVertical="8dp"
    android:background="@color/cthulhu_DarkGreen">

    <TextView
        android:id="@+id/card_imie_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Imie"
        android:textSize="20sp"
        android:layout_marginVertical="4dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/white"/>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/baseline_add_photo_alternate_24"
        android:scaleType="centerCrop"
        android:layout_gravity="end"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:id="@+id/mini_image"
        android:contentDescription="photo of character"
        />

    <TextView
        android:id="@+id/card_nazwisko_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Nazwisko"
        android:textSize="20sp"
        android:layout_marginVertical="4dp"
        android:layout_toStartOf="@id/card_nazwisko_view"
        android:layout_toEndOf="@id/card_imie_view"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"/>

</RelativeLayout>




