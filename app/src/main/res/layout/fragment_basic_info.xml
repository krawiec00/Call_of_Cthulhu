<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.BasicInfoFragment">


    <LinearLayout
        android:id="@+id/content_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="0dp"
        android:orientation="vertical"
        android:padding="5dp">




        <!-- Dodane pole na zdjęcie -->
        <ImageView
            android:id="@+id/card_zdjecie"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/baseline_add_photo_alternate_24"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"
            android:contentDescription="Zdjęcie badacza" />

        <!-- Przycisk do dodawania/wyboru zdjęcia -->
        <Button
            android:id="@+id/btn_dodaj_zdjecie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Zdjęcie" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/imie"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/card_imie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nazwisko"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/card_nazwisko"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/profesja"
            android:textSize="20sp" />
        <Spinner
            android:id="@+id/card_spinner_profesja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="15dp" />

        <EditText
            android:id="@+id/card_profesja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wiek"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/card_wiek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/p_e"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/card_plec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/miejsce_zamieszkania"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/card_mZamieszkania"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/miejsce_urodzenia"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/card_mUrodzenia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</ScrollView>