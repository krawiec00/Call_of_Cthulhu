            <!-- ImageButton -->
            <ImageButton
                android:id="@+id/button_zrecznosc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dice2" />
        </LinearLayout>

        <!-- WYGLĄD -->
