                    android:background="@drawable/edittext_background"/>

                <TextView
                    android:id="@+id/zrecznosc2"
                    android:layout_width="100dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:text=""
