<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:layout_marginVertical="8dp"
    android:background="#30FFFFFF"
    android:gravity="center_vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/note_title_text_view"
        android:text="placeholder"
        android:textColor="@color/black"
        android:fontFamily="@font/old_standard_tt_regular"
        android:textSize="18sp"
        android:layout_marginVertical="4dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/note_content_text_view"
        android:text="Very long placeholder"
        android:fontFamily="@font/old_standard_tt_regular"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="17sp"
        />

    <TextView
        android:id="@+id/note_date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="date placeholder"
        android:textSize="14sp"
        android:fontFamily="@font/old_standard_tt_regular" />

</LinearLayout>