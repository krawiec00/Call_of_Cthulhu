<resources>
    <!-- Styl dla tekstu w tabach -->
    <style name="MyTabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item> <!-- Rozmiar czcionki -->
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/old_standard_tt_bold</item>
    </style>

    <style name="NoHighlightSelectedItem">
        <item name="android:colorControlHighlight">@android:color/transparent</item>
    </style>

    <style name="CustomTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:statusBarColor">@color/cthulhu_Green</item>
        <item name="android:screenOrientation">portrait</item>
    </style>

    <style name="CustomLogin" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:statusBarColor">@color/cthulhu_DarkGreen</item>
        <item name="android:screenOrientation">portrait</item>
    </style>

    <style name="CommonTextView">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:fontFamily">@font/old_standard_tt_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CommonEditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:fontFamily">@font/old_standard_tt_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
    </style>




</resources>
